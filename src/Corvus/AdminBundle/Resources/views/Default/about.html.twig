{% extends 'CorvusAdminBundle:Default:adminBase.html.twig' %}

{% block breadcrumbs %}
	<li class="active">About</li>
{% endblock %}

{% block mainContent %}

    <h2>About</h2>
    <div class="well">
        These are all the personal/contact details stored in your corvus record. This will be displayed on the frontend.<br />
		It will also be included in the downloadable CV <span class="label label-info">Coming Soon</span>.
    </div>
    
	<div class="row">
		<div class="col-md-12">
		{{ form_errors(form) }}
			<form action="{{ path('admin_about') }}" method="post" {{ form_enctype(form) }} role="form">
				<fieldset>
					<legend><span>About Fields:</span></legend>

						{{ form_label(form.firstname) }}
						{{ form_widget(form.firstname) }}

					<div>
						{{ form_label(form.lastname) }}
						{{ form_widget(form.lastname) }}
					</div>

					<div>
						{{ form_label(form.age) }}
						{{ form_widget(form.age) }}
					</div>

					<div>
						{{ form_label(form.bio) }}
						{{ form_widget(form.bio) }}
					</div>

					{{ form_row(form.address) }}
					{{ form_row(form.location) }}
					{{ form_row(form.interests_hobbies) }}

					<div>
						{{ form_label(form.email_address) }}
						{{ form_widget(form.email_address) }}
					</div>

					{{ form_row(form.twitter) }}
					{{ form_row(form.facebook) }}

				</fieldset>

				{{ form_row(form._token) }}
                {{ core.formErrors(form) }}
                
				<input type="submit" class="btn btn-primary" value="Save" />
			</form>
		</div>
	</div>
{% endblock %}