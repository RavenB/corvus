{% extends 'CorvusAdminBundle:Default:adminBase.html.twig' %}

{% block breadcrumbs %}
	<li><a href="{{ path('CorvusAdminBundle_Education') }}">Education</a></li>
	<li class="active">Edit</li>
{% endblock %}

{% block mainContent %}
	<h2>Editing "{{ form.vars.value.educationInstitute }} - {{ form.vars.value.qualification }}"</h2>
	<p class="well">
		Use the below form to update your Education details.
	</p>

	<form action="{{ path('CorvusAdminBundle_EditEducation', {'id' : form.vars.value.id }) }}" method="post" {{ form_enctype(form) }}>
		<fieldset>
			<legend>Education Fields:</legend>
			
			<div class="form-group">
                {{ form_label(form.education_institute) }}
                {{ form_errors(form.education_institute) }}
                {{ form_widget(form.education_institute) }}
            </div>

            <div class="form-group">
                {{ form_label(form.qualification) }}
                {{ form_errors(form.qualification) }}
                {{ form_widget(form.qualification) }}
            </div>

            <div class="form-group">
                {{ form_label(form.start_date) }}
                {{ form_errors(form.start_date) }}
                {{ form_widget(form.start_date) }}
            </div>

            <div class="form-group">
                {{ form_label(form.duration) }}
                {{ form_errors(form.duration) }}
                {{ form_widget(form.duration) }}
            </div>

            {{ form_row(form.result) }}
		</fieldset>

		{{ form_rest(form) }}

		<input type="submit" class="btn btn-primary" value="Save" />
	</form>
	
	<aside>
		<h3>Help</h3>
		<p>Fields marked with <span class="required-hint"></span> are required</p>
	</aside>
{% endblock %}