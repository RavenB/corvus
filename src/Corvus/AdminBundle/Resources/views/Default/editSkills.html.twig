{% extends 'CorvusAdminBundle:Default:adminBase.html.twig' %}

{% block mainContent %}

	<h2>Editing "{{ form.vars.value.skillName }}"</h2>
	<p>
		Use this form to update the skill details. <br />
		Please enter all the fields, Alternate text is highly usefull for people with screenreaders :)
	</p>

	<form action="{{ path('CorvusAdminBundle_EditSkills', {'id' : form.vars.value.id }) }}" method="post" {{ form_enctype(form) }}>
		<fieldset>
			<legend>Skill Fields:</legend>

			<div>
                {{ form_label(form.skill_name) }}
                <span class="asterix">*</span>
                {{ form_errors(form.skill_name) }}
                {{ form_widget(form.skill_name) }}
            </div>

            <div>
                {{ form_label(form.competency) }}
                <span class="asterix">*</span>
                {{ form_errors(form.competency) }}
                {{ form_widget(form.competency) }}
            </div>

            <div>
                {{ form_label(form.years_experience) }}
                <span class="asterix">*</span>
                {{ form_errors(form.years_experience) }}
                {{ form_widget(form.years_experience) }}
            </div>

            <div>
                {{ form_label(form.description) }}
                <span class="asterix">*</span>
                {{ form_errors(form.description) }}
                {{ form_widget(form.description) }}
            </div>

		</fieldset>

		{{ form_rest(form) }}

		<a href="{{ path('CorvusAdminBundle_Skills') }}" class="cancel">Cancel</a>
		&nbsp;
		<input type="submit" class="submit" value="Submit" />
	
	</form>

{% endblock %}