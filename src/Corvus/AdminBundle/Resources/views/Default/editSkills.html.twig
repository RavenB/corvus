{% extends 'CorvusAdminBundle:Default:adminBase.html.twig' %}

{% block breadcrumbs %}
	<li><a href="{{ path('admin_skills') }}">Skills</a></li>
	<li class="active">Edit</li>
{% endblock %}

{% block mainContent %}
	<h2>Editing "{{ form.vars.value.skillName }}"</h2>
	<p class="well">
		Use this form to update the <b>Skill details</b>.
	</p>

	<form role="form" action="{{ path('admin_skills_edit', {'id' : form.vars.value.id }) }}" method="post" {{ form_enctype(form) }}>
		<fieldset>
			<legend>Skill Fields:</legend>

			<div class="form-group">
                {{ form_label(form.skill_name) }}
                {{ form_widget(form.skill_name) }}
            </div>

			<div class="form-group">
                {{ form_label(form.competency) }}
                {{ form_widget(form.competency) }}
            </div>

            <div class="form-goup">
                {{ form_label(form.years_experience) }}
                {{ form_widget(form.years_experience) }}
            </div>

            <div class="form-goup">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
            </div>
			
			<div class="form-group">
                {{ form_label(form.can_display_skill) }}
                {{ form_widget(form.can_display_skill) }}
            </div>
			
			<p class="help-block">Controls if <b>All details about the Skill</b> will be displayed</p>
			
			<div class="form-group">
                {{ form_label(form.is_quick_skill) }}
                {{ form_widget(form.is_quick_skill) }}
            </div>
			
			<p class="help-block">Controls if the Skill will be <b>displayed in the Quick Skills</b> section</p>
		</fieldset>

		{{ form_rest(form) }}
        {{ core.formErrors(form) }}

		<input type="submit" class="btn btn-primary" value="Save" />
	</form>
	
	<aside>
		<h3>Help</h3>
		<p>Fields marked with <span class="required-hint"></span> are required</p>
	</aside>
{% endblock %}