{% extends 'CorvusAdminBundle:Default:adminBase.html.twig' %}

{% block mainContent %}

	<h2>Edit "{{ form.vars.value.employerName }} - {{ form.vars.value.role }}"</h2>
	<p>
		Use this form to update the work history details.<br />
		Please enter all the fields, Alternate text is highly usefull for people with screenreaders :)
	</p>

	<form action="{{ path('CorvusAdminBundle_EditWorkHistory', {'id' : form.vars.value.id }) }}" method="post" {{ form_enctype(form) }}>
		{{ form_errors(form) }}
		<fieldset>
			<legend>Work History Fields:</legend>

			{{ form_row(form.employer_name) }}
			{{ form_row(form.employer_address) }}
			{{ form_row(form.start_date) }}
			{{ form_row(form.duration) }}
			{{ form_row(form.role) }}
			{{ form_row(form.duties) }}
			{{ form_row(form.feedback_received) }}
			{{ form_row(form.reflection) }}
			{{ form_row(form.employer_phone_number) }}
		</fieldset>

		<fieldset>
            <legend>Meta Info:</legend>
            {{ form_row(form.meta_title) }}
            {{ form_row(form.meta_description) }}
        </fieldset>

        	{{ form_row(form._token) }}

		<a href="{{ path('CorvusAdminBundle_WorkHistory') }}" class="cancel">Cancel</a>
		&nbsp;
		<input type="submit" class="submit" value="Submit" />
	
	</form>

{% endblock %}