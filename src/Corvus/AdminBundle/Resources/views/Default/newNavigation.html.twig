{% extends 'CorvusAdminBundle:Default:adminBase.html.twig' %}

{% block mainContent %}

	<h2>Add a New Navigation item.</h2>
	<p>
		Please enter all the fields, Alternate text is highly usefull for people with screenreaders :)
	</p>

	<form action="{{ path('CorvusAdminBundle_NewNavigation') }}" method="post" {{ form_enctype(form) }} class="classy">
		<fieldset>
			<legend>Navigation Fields:</legend>
			
			<div>
                {{ form_label(form.navigation_order) }}
                <span class="asterix">*</span>
                {{ form_errors(form.navigation_order) }}
                {{ form_widget(form.navigation_order) }}
            </div>

            <div>
                {{ form_label(form.href) }}
                <span class="asterix">*</span>
                {{ form_errors(form.href) }}
                {{ form_widget(form.href) }}
            </div>

            <div>
                {{ form_label(form.title) }}
                <span class="asterix">*</span>
                {{ form_errors(form.title) }}
                {{ form_widget(form.title) }}
            </div>

            <div>
                {{ form_label(form.alt) }}
                <span class="asterix">*</span>
                {{ form_errors(form.alt) }}
                {{ form_widget(form.alt) }}
            </div>

            {{ form_row(form.internalRoutes) }}

		</fieldset>

		{{ form_rest(form) }}

		<a href="{{ path('CorvusAdminBundle_Navigation') }}" class="cancel">Cancel</a>
		&nbsp;
		<input type="submit" class="submit" value="Submit" />
	
	</form>

	<script type="text/javascript">
		jQuery(function(){
			var navSelect = $("#navigation_internalRoutes");
			var navHref = $("#navigation_href");
			$(navSelect).change(function() {
				if(navSelect.val() != "")
				{
					$(navHref).parent().slideUp();
				}
				else
				{
					
					$(navHref).parent().slideDown();
				}
			})
		});
	</script>
{% endblock %}