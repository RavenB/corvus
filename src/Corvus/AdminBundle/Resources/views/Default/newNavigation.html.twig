{% extends 'CorvusAdminBundle:Default:adminBase.html.twig' %}

{% block breadcrumbs %}
	<li><a href="{{ path('admin_navigation') }}">Navigation</a></li>
	<li class="active">New</li>
{% endblock %}

{% block mainContent %}
	<h2>Add new Navigation</h2>
	<p class="well">
        A new <b>Navigation item</b> will display another link in the Navigation on the frontend.<br />
        Enter the <b>HREF</b> to link to an external resource, <b>or</b> use the <b>Internal Routes</b> to link to a page
		in the portfolio.
	</p>

	<form role="form" action="{{ path('admin_navigation_new') }}" method="post" {{ form_enctype(form) }}>
		<fieldset>
			<legend>Navigation Fields:</legend>
			
            <div class="form-group">
                {{ form_label(form.href) }}
                {{ form_widget(form.href) }}
            </div>

            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
            </div>

            <div class="form-group">
                {{ form_label(form.alt) }}
                {{ form_widget(form.alt) }}
            </div>

            <div class="form-group">
                {{ form_label(form.internalRoutes) }}
                {{ form_widget(form.internalRoutes) }}
            </div>

            <p class="help-block">The Internal Routes are pages on the Frontend of the Portfolio</p>
		</fieldset>

		{{ form_rest(form) }}
        {{ core.formErrors(form) }}

		<input type="submit" class="btn btn-primary" value="Save" />
	
	</form>
	
	<aside>
		<h3>Help</h3>
		<p>Fields marked with <span class="required-hint"></span> are required</p>
	</aside>
{% endblock %}