{% extends 'CorvusAdminBundle:Default:adminBase.html.twig' %}

{% block breadcrumbs %}
	<li><a href="{{ path('admin_work_history') }}">Work History</a></li>
	<li class="active">New</li>
{% endblock %}

{% block mainContent %}
	<h2>Add Work History</h2>
	<p class="well">
		The Work history added with this form will display a detailed breakdown of your employment on the frontend.<br />
		This breakdown will be a dedicated page for the Employment details and will serve as a way to highlight,
		current/past employment.
	</p>

	<form action="{{ path('admin_work_history_new') }}" method="post" {{ form_enctype(form) }} class="classy">
		<fieldset>
			<legend>Work History Fields:</legend>
            
            <div class="form-group">
                {{ form_label(form.slug) }}
                {{ form_errors(form.slug) }}
                {{ form_widget(form.slug) }}
            </div>

            <div class="form-group">
                {{ form_label(form.employer_name) }}
                {{ form_errors(form.employer_name) }}
                {{ form_widget(form.employer_name) }}
            </div>

			<div class="form-group">
                {{ form_label(form.employer_address) }}
                {{ form_errors(form.employer_address) }}
                {{ form_widget(form.employer_address) }}
            </div>
			
			{{ form_row(form.employer_phone_number) }}

			<div class="form-group">
                {{ form_label(form.start_date) }}
                {{ form_errors(form.start_date) }}
                {{ form_widget(form.start_date) }}
            </div>

			<div class="form-group">
                {{ form_label(form.end_date) }}
                {{ form_errors(form.end_date) }}
                {{ form_widget(form.end_date) }}
            </div>

			<div class="form-group">
                {{ form_label(form.is_current_position) }}
                {{ form_errors(form.is_current_position) }}
                {{ form_widget(form.is_current_position) }}
            </div>

			<div class="form-group">
                {{ form_label(form.role) }}
                {{ form_errors(form.role) }}
                {{ form_widget(form.role) }}
            </div>

			{{ form_row(form.duties) }}
			{{ form_row(form.feedback_received) }}
			{{ form_row(form.reflection) }}
            
            <div class="form-group">
                {{ form_label(form.is_published) }}
                {{ form_errors(form.is_published) }}
                {{ form_widget(form.is_published) }}
            </div>
		</fieldset>

		<fieldset>
            <legend>Meta Info:</legend>

            <div class="form-group">
                {{ form_label(form.meta_title) }}
                {{ form_errors(form.meta_title) }}
                {{ form_widget(form.meta_title) }}
            </div>

            {{ form_row(form.meta_description) }}
        </fieldset>

    	{{ form_rest(form) }}
    	
		<input type="submit" class="btn btn-primary" value="Save" />
	</form>
	
	<aside>
		<h3>Help</h3>
		<p>Fields marked with <span class="required-hint"></span> are required</p>
	</aside>
{% endblock %}

{% block javascripts %}<script src="{{ asset('bundles/corvusadmin/js/workhistory.js') }}"></script>{% endblock %}