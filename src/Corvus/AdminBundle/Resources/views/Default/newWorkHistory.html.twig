{% extends 'CorvusAdminBundle:Default:adminBase.html.twig' %}

{% block breadcrumbs %}
	<li><a href="{{ path('admin_work_history') }}">Work History</a></li>
	<li class="active">New</li>
{% endblock %}

{% block mainContent %}
	<h2>Add Work History</h2>
	<p class="well">
        The <b>Work history</b> added with this form will show a <b>Detailed Employment Overview</b> on on your Portfolio.<br />
        This overview will be displayed on a dedicated page for the <b>Employment details</b> and will serve as a way to <b>Highlight your
		Current/Past Employment</b>.
	</p>

	<form role="form" action="{{ path('admin_work_history_new') }}" method="post" {{ form_enctype(form) }}>
		<fieldset>
			<legend>Work History Fields:</legend>
            
            <div class="form-group">
                {{ form_label(form.slug) }}
                {{ form_widget(form.slug) }}
            </div>

            <div class="form-group">
                {{ form_label(form.employer_name) }}
                {{ form_widget(form.employer_name) }}
            </div>

			<div class="form-group">
                {{ form_label(form.employer_address) }}
                {{ form_widget(form.employer_address) }}
            </div>
			
            <div class="form-group">
                {{ form_label(form.employer_phone_number) }}
                {{ form_widget(form.employer_phone_number) }}
            </div>

			<div class="form-group">
                {{ form_label(form.start_date) }}
                {{ form_widget(form.start_date) }}
            </div>

			<div class="form-group">
                {{ form_label(form.end_date) }}
                {{ form_widget(form.end_date) }}
            </div>

			<div class="form-group">
                {{ form_label(form.is_current_position) }}
                {{ form_widget(form.is_current_position) }}
            </div>

			<div class="form-group">
                {{ form_label(form.role) }}
                {{ form_widget(form.role) }}
            </div>

            <div class="form-group">
                {{ form_label(form.duties) }}
                {{ form_widget(form.duties) }}
            </div>
            <div class="form-group">
                {{ form_label(form.feedback_received) }}
                {{ form_widget(form.feedback_received) }}
            </div>
            <div class="form-group">
                {{ form_label(form.reflection) }}
                {{ form_widget(form.reflection) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.is_published) }}
                {{ form_widget(form.is_published) }}
            </div>
		</fieldset>

		<fieldset>
            <legend>Meta Info:</legend>

            <div class="form-group">
                {{ form_label(form.meta_title) }}
                {{ form_widget(form.meta_title) }}
            </div>

            <div class="form-group">
                {{ form_label(form.meta_description) }}
                {{ form_widget(form.meta_description) }}
            </div>
        </fieldset>

    	{{ form_rest(form) }}
        {{ core.formErrors(form) }}
    	
		<input type="submit" class="btn btn-primary" value="Save" />
	</form>
	
	<aside>
		<h3>Help</h3>
		<p>Fields marked with <span class="required-hint"></span> are required</p>
	</aside>
{% endblock %}

{% block javascripts %}<script src="{{ asset('bundles/corvusadmin/js/workhistory.js') }}"></script>{% endblock %}