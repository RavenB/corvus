{% extends 'CorvusAdminBundle:Default:adminBase.html.twig' %}

{% block breadcrumbs %}
	<li class="active">Site Design</li>
{% endblock %}

{% block mainContent %}
    <h2>Site Design</h2>
    
    <div class="well">
        The Site Design section allows you to choose the currently active template/theme choice.<br />
        You can also Edit the current theme by clicking the "Edit Theme" button below.
    </div>

    <form action="{{ path('CorvusAdminBundle_SiteDesign') }}" method="post" {{ form_enctype(form) }}>
        <div class="form-group">
            {{ form_row(form.template_choice) }}
        </div>

        <div class="form-group">
            {{ form_row(form.theme_choice) }}
        </div>

        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Save</button>
            {{ form_widget(form.generate_button, { "label": "Compile Theme", "attr": { "class": "btn btn-info"}}) }}
            <a href="{{ path('CorvusAdminBundle_ThemeEditor') }}" class="btn btn-warning">Edit Theme</a>
        </div>
        
        <p class="help-block">Compiling the theme takes a while!<br />Editing edits the current theme</p>
        {{ form_row(form._token) }}
    </form>
{% endblock %}