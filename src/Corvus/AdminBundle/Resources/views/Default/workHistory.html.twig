{% extends 'CorvusAdminBundle:Default:adminBase.html.twig' %}

{% block mainContent %}
    <h2>Work History</h2>
    <p>From here you can change the work history on your website. Use the actions section to edit/delete or select multiple and apply a batch action.</p>
    
    <div>
    
    <form action="{{ path('CorvusAdminBundle_DeleteWorkHistory') }}" method="post" id="workHistoryform" name="workHistoryform">

    <table class="fancyTable">
    	<thead>
    		<tr><th><input type="checkbox" id="selectAll" /></th>
            <th>Order</th>
            <th>Employer Name</th>
            <th>Role</th>
            <th>Start Date</th>
            <th>Actions</th></tr>
    	</thead>
    	<tbody>
		    {% for item in form.workHistory %}
		    	<tr>
    		    	<td>{{ form_widget(item.check, { 'value' : item.vars.value.id }) }}</td>
                    <td>{{ item.vars.value.rowOrder }}</td>
    		    	<td>{{ item.vars.value.employername }}</td>
                    <td>{{ item.vars.value.role }}</td>
                    <td>{{ item.vars.value.startDate|date("d/m/y") }}</td>
    		    	<td>
                        {% if form.workHistory|length > 1 %}
                            {% if loop.first == true %}
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            {% else %}
                                <a href="{{ path('CorvusAdminBundle_UpWorkHistoryOrder', { id : item.vars.value.id }) }}">
                                <img src="{{ asset('/bundles/corvusadmin/images/icons/up.png') }}" alt="UpArrow" /></a>
                            {% endif %}
                            {% if loop.last == false %}
                                <a href="{{ path('CorvusAdminBundle_DownWorkHistoryOrder', { id : item.vars.value.id }) }}">
                                <img src="{{ asset('/bundles/corvusadmin/images/icons/down.png') }}" alt="DownArrow" /></a>
                            {% else %}
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            {% endif %}
                            |
                        {% endif %}
                        <img src="{{ asset('bundles/corvusadmin/images/icons/edit.png') }}" />
                        <a href="{{ path('CorvusAdminBundle_EditWorkHistory', { id : item.vars.value.id }) }}">
                            Edit</a>
                        |
                        <img src="{{ asset('bundles/corvusadmin/images/icons/delete.png') }}" />
                        <a href="{{ path('CorvusAdminBundle_DeleteWorkHistoryId', { id : item.vars.value.id }) }}">
                            Delete</a>
                    </td>
                </tr>
		    {% endfor %}
    	</tbody>
    </table>
    <br />
    <p>Multiple Actions</p>
    <select>
    	<option>Delete Selected</option>
    </select>
    <input type="submit" value="Go" />
    <a href="{{ path('CorvusAdminBundle_NewWorkHistory') }}">New</a>

    {{ form_widget(form._token) }}
    </form>
    </div>
{% endblock %}