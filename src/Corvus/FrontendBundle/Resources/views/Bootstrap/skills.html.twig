{% extends 'CorvusFrontendBundle:' ~ portfolio_info.templateChoice ~ ':index.html.twig' %}

{% block metaTitleStart %}{{ portfolio_info.generalSettings.skillsMetaTitle }}{% endblock %}

{% block mainContent %}
	<div class="well clearfix">
		<i class="fa fa-magic fa-5x wellImg pull-left" alt="Large Skills Icon"></i>
		<hgroup class="pull-left">
			<h2>Skills</h2>
			<p>This is a list of my skills</p>
		</hgroup>
	</div>
	<div>
		{% if skills | length > 0 %}
		<h2>Quick list of skills</h2>
		<br />
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<td>Name</td>
						<td>Experience</td>
						<td>Competency</td>
					</tr>
				</thead>
				<tbody>
				{% for skill in skills %}
					<tr>
						<td>{{ skill.skillName }}</td>
						<td>{{ skill.yearsExperience }}</td>
						<td>{{ skill.competency }}</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		{% endif %}
		<hr />

		{% for skill in skills %}
			<h3>{{ skill.skillName }}</h3>
			<br />

			<h4 class="displayInline">Competency -</h4>
			<p class="displayInline">{{ skill.competency }}</p>

			<br />
			<br />

			<h4 class="displayInline">Years Experience -</h4>
			<p class="displayInline">{{ skill.yearsExperience }}</p>

			<br />
			<br />

			<h4>Description</h4>
			<p>{{ skill.description }}</p>

			{% if not loop.last %}
				<br />
				<hr />
			{% endif %}
		{% endfor %}
		
	</div>
{% endblock %}